{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src/**/*", "src"],
  "exclude": ["src/**/test/**", "src/**/*.spec.ts"]
}
